<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css">
  <title>CSV File Upload</title>
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .maindiv{
      margin-top:2%;
    }

    .labelcontent{
      font-size: xx-large;
      font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
      text-align: center;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="row maindiv">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header">CSV File Upload</div>
          <div class="card-body">
            <form action="/upload" method="post" enctype="multipart/form-data">
              <div class="row">
                <div class="col-md-8">
                  <input type="file" class="form-control" name="csvFile" accept=".csv">
                </div>
                <div class="col-md-4">
                  <button type="submit" class="btn btn-primary">Upload</button>
                </div>
              </div>
            </form>
          </div>
          <div class="card-footer">
           
            <div class="row">
              <div class="col-md-12">
                  <div class="row">
                    <label class="labelcontent">Uploaded Files</label>
                  </div>
                  <div class="row">
                    
                      <table id="myTable" class="cell-border">
                        <thead>
                          <tr>
                            <th>SNo</th>
                            <th>CSV File</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% files.forEach((file, index) => { %>
                          <tr>
                              <td><%= index+1 %></td>
                              <td><a href="/view/<%= file %>" target="_black"><%= file %></a></td>              
                          </tr>
                          <% }); %>                      
                      </tbody>
                      </table>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    $(document).ready( function () {
    $('#myTable').DataTable();
} );
  </script>
</body>

</html>
